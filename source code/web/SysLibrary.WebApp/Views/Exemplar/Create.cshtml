@model SysLibrary.WebApp.Models.ExemplarViewModel

@{
    ViewBag.Title = "Create";
}

@using (Html.BeginForm("Create", "Exemplar", FormMethod.Post))
{

    <div class="row">&nbsp;</div>

    <div class="panel panel-primary">
        <div class="panel-heading">Cadastro de Exemplares</div>
        <div class="panel-body">


            @Html.AntiForgeryToken()


                @Html.ValidationSummary(true)
                @Html.HiddenFor(x => x.Exemplar.Id)
                
            <div class="row">

                <div class="form-group col-lg-2">
                    <label>Patrimônio</label>
                    <div>
                        @Html.TextBoxFor(model => model.Exemplar.Patrimonio, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Exemplar.Patrimonio)
                    </div>
                </div>

            </div>

            <div class="row">

                <div class="form-group col-lg-4">
                    <label>Obra</label>
                    <div>
                        @Html.DropDownListFor(x => x.Exemplar.ObraId, Model.Obras, "Selecione uma obra...", new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Exemplar.ObraId)
                    </div>
                </div>

            </div>

        </div>

        <div class="panel-footer">

            <input type="submit" value="Salvar" class="btn btn-primary" />
            @Html.ActionLink("Voltar", "Index", "", new { @class = "btn btn-primary pull-right" })

        </div>
    </div>

}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
