@model SysLibrary.WebApp.Models.ObraViewModel

@{
    ViewBag.Title = "Create";
}


<div class="row">&nbsp;</div>
@using (Html.BeginForm("Create", "Obra", FormMethod.Post))
{
<div class="panel panel-primary">
    <div class="panel-heading">Cadastro de Obras</div>
    <div class="panel-body">
   

        @Html.AntiForgeryToken()


        @Html.ValidationSummary(true)
        @Html.HiddenFor(x => x.Obra.Id)

        <div class="row">

            <div class="form-group col-lg-2">
                <label>Código</label>
                <div>
                    @Html.TextBoxFor(model => model.Obra.Id, new { @class = "form-control", disabled = "disabled" })
                </div>
            </div>

        </div>

        <div class="row">
            <div class="form-group col-lg-2">
                <label>Código ISBN</label>
                <div>
                    @Html.TextBoxFor(model => model.Obra.CodigoISBN, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Obra.CodigoISBN)
                </div>
            </div>
        </div>
        
        <div class="row">
            <div class="form-group col-lg-6">
                <label>Título</label>
                <div>
                    @Html.TextBoxFor(model => model.Obra.Titulo, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Obra.Titulo)
                </div>
            </div>
        </div>

        <div class="row">

            <div class="form-group col-lg-3">
                <label>Autor</label>
                <div>
                    @Html.DropDownListFor(x => x.Obra.AutorId, Model.Autores, "Selecione um autor...", new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Obra.AutorId)
                </div>
            </div>

            <div class="form-group col-lg-3">
                <label>Editora</label>
                <div>
                    @Html.DropDownListFor(x => x.Obra.EditoraId, Model.Editoras, "Selecione uma editora...", new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Obra.EditoraId)
                </div>
            </div>

        </div>
        
        <div class="row">

            <div class="form-group col-lg-3">
                <label>Gênero</label>
                <div>
                    @Html.DropDownListFor(x => x.Obra.GeneroId, Model.Generos, "Selecione um genero...", new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Obra.GeneroId)
                </div>
            </div>

            <div class="form-group col-lg-3">
                <label>Ano de Publicação</label>
                <div>
                    @Html.TextBoxFor(model => model.Obra.AnoDePublicacao, new { @class = "form-control"})
                    @Html.ValidationMessageFor(model => model.Obra.AnoDePublicacao)
                </div>
            </div>

        </div>
        
        <div class="row">

            <div class="form-group col-lg-6">
                <label>Informações/Resumo/Notas Adicionais</label>
                <div>
                    @Html.TextAreaFor(model => model.Obra.Informacoes, new { @class = "form-control", rows = "5" })
                    @Html.ValidationMessageFor(model => model.Obra.Informacoes)
                </div>
            </div>

        </div>
        
    
    </div>

    <div class="panel-footer">

        <input type="submit" value="Salvar" class="btn btn-primary" />
        @Html.ActionLink("Voltar", "Index", "", new { @class = "btn btn-primary pull-right" })

    </div>
</div>
 }




@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
