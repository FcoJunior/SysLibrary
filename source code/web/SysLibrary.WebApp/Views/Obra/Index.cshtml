@using SysLibrary.WebApp.ViewModels;

@model ObraViewModel

@{
    ViewBag.Title = "Index";
}

<h2>Editoras</h2>

<div class="col-lg-10">
    @using (Html.BeginForm("Create", "Obra", FormMethod.Post))
    {
        <div class="form-horizontal">
            @Html.Partial("Form", new ObraViewModel() { Obra = new SysLibrary.Entidades.DTO.ObraDTO(), Autores = @Model.Autores, Generos = @Model.Generos, Editoras = @Model.Editoras })
            <div class="form-group">
                <div class="col-lg-6 text-right">
                    <button type="submit" class="btn btn-default">Novo</button>
                </div>
            </div>
        </div>
    }

    <table class="table table-responsive table-hover">
        <thead>
            <tr>
                <th>Código</th>
                <th>Nome</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var e in @Model.Obras)
            {
                <tr>
                    <td>@e.Id</td>
                    <td>@e.Nome</td>
                    <td>
                        <button type="button" class="btn-link" onclick="redirect(@e.Id)">Editar</button>
                    </td>
                    <td>
                        <button type="button" class="btn-link" onclick="redirect(@e.Id, 'details')">Detalhes</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <script>
        function redirect(id, details) {
            if (details == null || details == undefined) {
                location.href = "/Obra/Edit/" + id;
            } else {
                location.href = "/Obra/Details/" + id;
            }
        }

    </script>
</div>

