@model SysLibrary.WebApp.Models.UsuarioViewModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/Login.css" rel="stylesheet" />
    <title>Index</title>
</head>
<body>

    <div class="container">
        <div class="row">
            <div class="col-sm-6 col-md-4 col-md-offset-4">
                <h1 class="text-center login-title">Entre para continuar a navegação</h1>
                <div class="account-wall">
                    <h1 class="text-center">SysLibrary</h1>

                    @using (Html.BeginForm("Logar", "Usuario", FormMethod.Post, new { @class = "form-signin" }))
                    {
                        @Html.AntiForgeryToken()
                        
                        @Html.TextBoxFor(x => x.Usuario.Email, new { @class = "form-control", placeholder = "Email", type = "email", required = "required", autofocus = "autofocus" });
                        @Html.TextBoxFor(x => x.Usuario.Senha, new { @class = "form-control", placeholder = "Senha", type = "password", required = "required" });

                        <button class="btn btn-lg btn-primary btn-block" type="submit">
                            Entrar
                        </button>
                        <label class="checkbox pull-left">
                            <input type="checkbox" value="remember-me">
                            Lembrar
                        </label>
                        <a href="#" class="pull-right need-help">Esqueceu sua senha? </a><span class="clearfix"></span>
                    }
                    <span class="text-center new-account alert-danger">@TempData["Message"]</span>
                </div>
            </div>
        </div>
    </div>

</body>
</html>
